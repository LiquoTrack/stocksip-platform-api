{
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017/?ssl=false&retryWrites=true&w=majority&tlsAllowInvalidCertificates=true",
    "DatabaseName": "stocksip_platform"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Google": {
      "ClientId": "YOUR_CLIENT_ID",
      "ClientSecret": "YOUR_CLIENT_SECRET"
    }
  },
  "MercadoPagoSettings": {
    "AccessToken": "YOUR_ACCESS_TOKEN_HERE",
    "WebhookSecret": "YOUR_WEBHOOK_SECRET_HERE"
  },
  "SmtpServiceSettings": {
    "Server": "smtp.gmail.com",
    "Port": 587,
    "SenderName": "YOUR_NAME_HERE",
    "SenderEmail": "YOUR_EMAIL_HERE",
    "Username": "YOUR_EMAIL_HERE",
    "Password": "YOUR_PASSWORD_HERE",
    "UseSsl": true
  },
  "Jwt": {
    "Secret": "YOUR_SECRET_HERE",
    "Issuer": "https://accounts.google.com",
    "Audience": "AUDIENCE_HERE",
    "ExpiryMinutes": 1440,
    "ClockSkew": 5,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "RequireExpirationTime": true,
    "RequireSignedTokens": true
  }
}
