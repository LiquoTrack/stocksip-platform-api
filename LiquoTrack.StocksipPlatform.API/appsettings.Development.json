{
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017/?ssl=false&retryWrites=true&w=majority&tlsAllowInvalidCertificates=true",
    "DatabaseName": "stocksip_platform"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Google": {
      "ClientId": "YOUR_CLIENT_ID",
      "ClientSecret": "YOUR_CLIENT_SECRET"
    }
  },
  "CloudinarySettings": {
    "CloudName": "CLOUD_NAME_HERE",
    "ApiKey": "API_KEY_HERE",
    "ApiSecret": "API_SECRET_HERE"
  },
  "MercadoPagoSettings": {
    "AccessToken": "ACCESS_TOKEN_HERE"
  },
  "Jwt": {
    "Secret": "YOUR_SECRET_HERE",
    "Issuer": "https://accounts.google.com",
    "Audience": "AUDIENCE_HERE",
    "ExpiryMinutes": 1440,
    "ClockSkew": 5,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "RequireExpirationTime": true,
    "RequireSignedTokens": true
  }
}
